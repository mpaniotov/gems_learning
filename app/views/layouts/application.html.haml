!!!
%html
  %head
    %title gems_learning
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"}
    %script{:src => "//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.4.4/underscore-min.js"}

    = csrf_meta_tags
    #user-widget
      - if current_user
        Welcome
        = succeed "!" do
          %strong= current_user.name
        = link_to "Sign out", signout_path, id: "sign_out",'data-skip-pjax' => true
      - else
        = link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in"
        = link_to "Sign in with Github", "/auth/github", id: "sign_in"
        = link_to "Sign in with Google", "/auth/google_oauth2"
        = link_to "Sign in with Twitter", "/auth/twitter"
        = link_to "Sign in with Yahoo", "/auth/yahoo"
    = switch_user_select
    = link_to User.last.email, "/switch_user?scope_identifier=user_#{User.last.id}"

  %body


    %div
      / This will not be touched on PJAX updates
      = Time.now
    .container#pjax-container
      = yield



